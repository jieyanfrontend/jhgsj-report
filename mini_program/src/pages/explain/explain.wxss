.page {
  height: 100%;
	min-height: 100vh;
	position: relative;
	top: 0;
	left: 0;
	padding-bottom: 86px;
}

.text-explain {
  padding: 0px 15px;
}

.text_title {
  margin-top: 0.77em;
  margin-bottom: 0.3em;
}

.text-title__hd {
  color: red;
  font-size: 15px;
  font-weight: bold;
}

.text-content {
  color: black;
  font-size: 15px;
  font-weight: normal;
}

.container {
  height: 100%;
  box-shadow: 1px 1px 5px 0 #a2958a;
}

.column {
	padding: 10px;
	overflow: hidden;
}

.img {
  padding-left: 30px;
  padding-right: 30px;
  width: 200rpx;
  height: 200rpx;
}

.text-advice {
  font-size: 18px;
  font-weight: bolder;
  color: #3385ff;
}

.explain {
  font-size: 13px;
  color: #3385ff;
  font-weight: bold;
  white-space: nowrap;
}

.text-container__hd {
  margin-bottom: 5px;
}

.text-container {
  margin-top: -15px;
  margin-bottom: 15px;
}


.column-item{
	float: left;
	width: 50%;
	box-sizing: border-box;
	padding: 0 5px;
	position: relative;
	left: 0;
	top: 0;
	margin-bottom: 0; 
}
.column-item:last-of-type{
	margin-bottom: 0;
}
.column-container{
	padding-top: 150%;
	position: relative;
}
.column-img-container{
	position: absolute;
	left: 0;
	top: 0;
	bottom: 0;
	right: 0;
	width: 100%;
	
}
.column-img{
	width: 100%;
	height: 100%;
}
.column-text-container{
	text-align: center;
	position: relative;
	width: 100%;
}