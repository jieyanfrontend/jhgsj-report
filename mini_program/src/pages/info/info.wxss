.info{
	width: 750rpx;
	height: 100vh;
}
.info-title{
	text-align: center;
	font-size: 19px;
	padding: 15px 0;
	font-family: Sans-serif;
}
.info-ul{
	padding: 0 10px;
}
.info-li-title{
	font-size: 17px;
	margin: 20px 0 -20px;
	font-weight: 600;
}
.info-li-content{
	padding-left: 15px;
	font-size: 16px;
}
.container {
  height: 100%;
  /* box-shadow: 1px 1px 5px 0 #a2958a; */
}

.column {
	padding: 10px;
	overflow: hidden;
}
.column-item{
	float: left;
	width: 50%;
	box-sizing: border-box;
	padding: 0 5px;
	position: relative;
	left: 0;
	top: 0;
	margin-bottom: 0; 
}
.column-item:odd{
	padding-left: 0;
}
.column-container{
	padding-top: 150%;
	position: relative;
}
.column-img-container{
	position: absolute;
	left: 0;
	top: 0;
	bottom: 0;
	right: 0;
	width: 100%;
	
}
.column-img{
	width: 100%;
	height: 100%;
}
.column-text-container{
	text-align: center;
	position: relative;
	width: 100%;
}
.info-btn{
	padding: 10px 20px;
}