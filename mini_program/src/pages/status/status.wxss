.status-list{
    padding: 0 15px;
}
.status-list__item{
    border-radius: 2px;
    background-color: #fff;
    padding: 10px;
    margin-bottom: 15px;
}
.status-list__img{
    width: 30px;
    height: 30px;
}
.status-container{
    display: flex;
}
.status-left{
    flex-grow: 1;
    flex-shrink: 1;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.status-right{
    flex-grow: 0;
    flex-shrink: 0;
}
.status-title{
    width:100%;
    font-size: 14px;
    color: #0084ff;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.enterprise{
    font-size: 16px;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis ;
    white-space: nowrap;
}
.post-time{
    font-size: 13px;
}