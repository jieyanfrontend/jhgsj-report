.container{
    width: 100%;
    border-radius: 2px;
    padding-top: 100%;
    position: relative;
    top: 0;
    left: 0;
    background-color: #f8f8f8;
    box-shadow: 1px 1px 5px 0 #a2958a;
}
.container-bd{
    position: absolute;
    left: 10px;
    bottom: 10px;
    top: 10px;
    right: 10px;
    border: 1px dashed silver;
    display: flex;
    justify-content: center;
    align-items: center;
}
.img{
    width: 120rpx;
    height: 120rpx;
}
.camera{
    position: relative;
    z-index: 999;
}
.camera-btn{
    position: absolute;
    display: block;
    width: 100%;
    height: 100%;
    opacity: 0;
}
.preview{
    border-radius: 2px;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1000;
    width: 100%;
    height: 100%;
}
.preview-img{
    width: 100%;
    height: 100%;
}