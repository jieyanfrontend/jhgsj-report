<view class="page">
 	<view class="page_bd">
  	<form bindsubmit="formSubmit" bindreset="formReset">
    	<view class="container">
					<view class="weui-cells__title cells__help">*请正确填写以下全部信息</view>
					<view class="weui-cells weui-cells_after-title">
						<view class="weui-cell weui-cell_input">
									<view class="weui-cell__hd">
											<view class="weui-label">企业名称：</view>
									</view>
									<view class="weui-cell__bd" >
											<input bindinput="handleOrgName" class="weui-input" placeholder="请输入企业名称" placeholder-class="placeholder"/>
									</view>
							</view>
							<view class="weui-cell weui-cell_input" >
									<view class="weui-cell__hd" >
											<view class="weui-label label__align">
													<text>统一社会</text><text>信用代码：</text>
											</view>
									</view>
									<view class="weui-cell__bd">
											<input maxlength='18' bindinput="handleRegisterCode" class="weui-input" placeholder="18位的阿拉伯数字或大写英文字母" placeholder-class="placeholder"/>
									</view>
							</view>
							<view class="weui-cell weui-cell_input">
								<view class="weui-cell__hd">
											<view class="weui-label">负责人：</view>
									</view>
								<view class="weui-cell__bd">
											<input class="weui-input" bindinput='handleAdmin' placeholder="请输入负责人" placeholder-class="placeholder"/>
									</view>
							</view>
							<view class="weui-cell weui-cell_input">
								<view>
									<view class="weui-cell__hd ">
										<view class="weui-label">地址：</view>
									</view>
									<view class="weui-cell__bd">
										<input class="weui-input" bindinput='handleAddress' placeholder="请输入地址" placeholder-class="placeholder"/>
									</view>
								</view>
							</view>
							<view class="weui-cell weui-cell_input weui-cell_vcode">
									<view class="weui-cell__hd">
											<view class="weui-label">手机号:</view>
									</view>
									<view class="weui-cell__bd">
											<input class="weui-input" bindinput='handlePhone' placeholder="请输入手机号" type='number' placeholder-class="placeholder"/>
									</view>
									<view class="weui-cell__ft">
											<view class="weui-vcode-btn vcode-btn">获取验证码</view>
									</view>
							</view>

							<view class="weui-cell weui-cell_input weui-cell_vcode">
								<view class="weui-cell__hd">
									<view class="weui-label">验证码:</view>
								</view>
								<view class="weui-cell__bd">
									<input class="weui-input" bindinput='handleCheckCode' placeholder="请输入验证码" placeholder-class="placeholder"/>
								</view>
							</view>
					</view>
					<view class="btn-area" >
						<button disabled="{{!validator}}" class="weui-button btn-primary" bindtap='addCheck'>下一步</button>
					</view>
			</view>
  	</form>
 	</view>
	<view class="page__ft">
		<view class="ft-item">
				<text>投诉建议</text>
		</view>
		<view class="ft-item">
				<text>联系我们</text>
		</view>
	</view>
</view>  
 
       


