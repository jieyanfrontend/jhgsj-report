<!--pages/information/information.wxml-->
<view class="page">
 <view class="page_bd">
  <form bindsubmit="formSubmit" bindreset="formReset">
    <view class="weui-cells__title" style='color:{{validator.length === 0?"blue":"red"}};text-align:center; font-size:smaller'>*请正确填写以下全部信息</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">企业名称：</view>
                </view>
                <view class="weui-cell__bd" >
                    <input bindinput="handleName"  class="weui-input" focus='true' placeholder="请输入企业名称"/>
                </view>
            </view>
            <view class="weui-cell weui-cell_input" >
                <view class="weui-cell__hd" >
                    <view class=" weui-label ">统一社会</view>
                    <view class=" weui-label ">信用代码：</view>
                   
                </view>
                <view class="weui-cell__bd"  >
                    <input maxlength='18' bindinput="handleCode" class="weui-input" placeholder-style='font-size:smaller' placeholder="18位的阿拉伯数字或大写英文字母"/>
                               
                </view>
            </view>

             <view class="weui-cell weui-cell_input" style='color:blue'>{{result}}</view>

            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">负责人：</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" bindinput='handleAdmin' placeholder="请输入负责人" />
                </view>
            </view>
            <view class="weui-cell weui-cell_input  "  >
              <view class='button-sp-area3'>
                <view class="weui-cell__hd ">
                    <view class="weui-label "  >地址：</view>
                </view>
                <view class="weui-cell__bd  "  >
                    <input class="weui-input "  bindinput='handleAddress' placeholder="请输入地址" />
                </view>
              </view>
            </view>





            <view class="weui-cell weui-cell_input weui-cell_vcode">
                <view class="weui-cell__hd">
                    <view class="weui-label">手机号:</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" bindinput='handlePhone' placeholder="请输入手机号" type='number' />
                </view>
                <view class="weui-cell__ft">
                    <view class="weui-vcode-btn">获取验证码</view>
                </view>
            </view>

             <view class="weui-cell weui-cell_input weui-cell_vcode">
                <view class="weui-cell__hd">
                    <view class="weui-label">验证码:</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" bindinput='handleCheckCode' placeholder="请输入验证码"  />
                </view>

            </view>
        

     
        </view>
        <view class="button-sp-area" >
          <view class='button-sp-area2  weui-label'>
          {{validator === 'init'?'':validator}}
          </view>
         
        </view>


        <view class="button-sp-area" >
               <button class="weui-button" style='background:green' bindtap='checkIn'>下一步</button>
        </view>
  </form>
 </view> 


  <view class="button-sp-area">
       
    <view class="weui-flex" style="color:black;text-align: center;">
      <view class="weui-flex__item">
       <view class="placeholder" style='color:green;font-size:smaller'>
         <navigator url="../advice/advice" >投诉建议
         </navigator>
       </view>
      </view>
      <view class="weui-flex__item" >
       <view class="placeholder" style='color:green;font-size:smaller '>
         <navigator url="../contact/contact" >联系我们
         </navigator>
       </view>
       
      </view>
    </view>
         
  </view>
</view>  
 
       


